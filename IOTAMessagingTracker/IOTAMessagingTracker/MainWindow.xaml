<Window x:Class="IOTAMessagingTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IOTAMessagingTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListView x:Name="lvRates" HorizontalAlignment="Left" Height="230" Margin="10,81,0,0" VerticalAlignment="Top" Width="498">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date" Width="150" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Date" Width="150" DisplayMemberBinding="{Binding PriceUSD}" />
                    <GridViewColumn Header="Rate" Width="150" DisplayMemberBinding="{Binding PriceBTC}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
